# Humanline Full Stack Application - Development Environment
# Copy this to .env for development mode

# === APPLICATION ENVIRONMENT ===
ENVIRONMENT=development
NODE_ENV=development

# === CONTAINER CONFIGURATION ===
CONTAINER_SUFFIX=-dev
INSTALL_DEV=true

# === DATABASE CONFIGURATION ===
POSTGRES_DB=humanline_dev
POSTGRES_USER=humanline_user
POSTGRES_PASSWORD=humanline_dev_password
POSTGRES_PORT=5433

# === REDIS CONFIGURATION ===
REDIS_PASSWORD=redis_dev_password
REDIS_PORT=6380

# === BACKEND CONFIGURATION ===
# JWT Security Configuration (Less secure for development)
SECRET_KEY=dev-secret-key-not-for-production-use-only-change-this
ALGORITHM=HS256
ACCESS_TOKEN_EXPIRE_MINUTES=60

# CORS Configuration (More permissive for development)
ALLOWED_ORIGINS=http://localhost:3000,http://127.0.0.1:3000,http://localhost:3001,http://localhost:8000

# Server Port (Same as production for consistency)
BACKEND_PORT=8000

# Logging (More verbose in development)
LOG_LEVEL=debug

# === FRONTEND CONFIGURATION ===
# API URLs (Development)
NEXT_PUBLIC_API_URL=http://localhost:8000
NEXT_PUBLIC_APP_URL=http://localhost:3001

# NextAuth Configuration (Development)
NEXTAUTH_SECRET=dev-nextauth-secret-not-for-production
NEXTAUTH_URL=http://localhost:3001

# Frontend Port (Different from production)
FRONTEND_PORT=3001

# === NGINX CONFIGURATION ===
NGINX_PORT=8080
NGINX_SSL_PORT=8443
