# Humanline Full Stack Application Environment Configuration
# Copy this to .env and customize for your deployment

# === APPLICATION ENVIRONMENT ===
ENVIRONMENT=production
NODE_ENV=production

# === CONTAINER CONFIGURATION ===
CONTAINER_SUFFIX=
INSTALL_DEV=false

# === DATABASE CONFIGURATION ===
POSTGRES_DB=humanline
POSTGRES_USER=humanline_user
POSTGRES_PASSWORD=your_secure_postgres_password_here
POSTGRES_PORT=5432

# === REDIS CONFIGURATION ===
REDIS_PASSWORD=your_secure_redis_password_here
REDIS_PORT=6379

# === BACKEND CONFIGURATION ===
# JWT Security Configuration
SECRET_KEY=your-super-secret-jwt-key-at-least-32-characters-long-change-this-in-production
ALGORITHM=HS256
ACCESS_TOKEN_EXPIRE_MINUTES=30

# CORS Configuration (comma-separated list)
ALLOWED_ORIGINS=http://localhost:3000,http://127.0.0.1:3000,https://yourdomain.com

# Server Port
BACKEND_PORT=8000

# Logging
LOG_LEVEL=info

# === FRONTEND CONFIGURATION ===
# API URLs
NEXT_PUBLIC_API_URL=http://localhost:8000
NEXT_PUBLIC_APP_URL=http://localhost:3000

# NextAuth Configuration
NEXTAUTH_SECRET=your-nextauth-secret-key-change-this-in-production
NEXTAUTH_URL=http://localhost:3000

# Frontend Port
FRONTEND_PORT=3000

# === NGINX CONFIGURATION ===
NGINX_PORT=80
NGINX_SSL_PORT=443

# === OPTIONAL: EMAIL CONFIGURATION ===
# SMTP_HOST=smtp.gmail.com
# SMTP_PORT=587
# SMTP_USER=your-email@gmail.com
# SMTP_PASSWORD=your-app-password
# FROM_EMAIL=noreply@yourdomain.com
